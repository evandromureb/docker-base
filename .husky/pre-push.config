# Configuração do Hook Pre-Push
# Este arquivo permite personalizar quais verificações são executadas

# Habilitar/desabilitar verificações específicas
ENABLE_LINT_STAGED=true      # Executar lint-staged para JS/TS
ENABLE_PHPSTAN=true          # Executar análise estática PHP
ENABLE_TESTS=true            # Executar testes automatizados
ENABLE_PINT=true             # Formatar código PHP
ENABLE_CS_FIXER=true         # Verificação adicional de estilo
ENABLE_SECURITY_CHECK=true   # Verificação de segurança
ENABLE_CACHE=true            # Usar cache para otimização

# Timeouts personalizados (em segundos)
LINT_STAGED_TIMEOUT=120      # 2 minutos
PHPSTAN_TIMEOUT=180          # 3 minutos
TESTS_TIMEOUT=240            # 4 minutos
CS_FIXER_TIMEOUT=60          # 1 minuto
SECURITY_CHECK_TIMEOUT=60    # 1 minuto

# Configurações de cache
CACHE_DURATION=3600          # Cache válido por 1 hora (em segundos)

# Configurações de logging
LOG_LEVEL=INFO               # DEBUG, INFO, WARN, ERROR
SHOW_TIMESTAMPS=true         # Mostrar timestamps nos logs 